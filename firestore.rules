rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // REGRA CORRIGIDA: Permite que usuários autenticados listem a coleção
    match /ranking/{userId} {
      allow read: if request.auth != null;
      allow write: if false; // Ninguém pode escrever do lado do cliente
    }

    match /users/{userId} {
      // Admin ou o próprio usuário podem ler/escrever no perfil privado
      allow read, write: if request.auth.uid == userId || get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.userId == request.auth.uid;
    }

    match /matches/{matchId} {
        // Qualquer usuário autenticado pode ler, mas só admin pode escrever
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.userId == request.auth.uid;
    }

    match /users/{userId}/guesses/{guessId} {
      // Apenas o próprio usuário pode gerenciar seus palpites
      allow read, write: if request.auth.uid == userId;
    }

    match /roles_admin/{userId} {
      // Apenas admins podem ver/modificar a lista de admins
      allow read, write: if get(/databases/$(database)/documents/roles_admin/$(request.auth.uid)).data.userId == request.auth.uid;
    }
  }
}